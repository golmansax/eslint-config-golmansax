{
  "extends": "airbnb",

  "rules": {
    "max-len": [2, 80],
    "no-console": 2,

    "arrow-parens": [2, "always"],

    "jsx-quotes": [2, "prefer-single"],
    "react/sort-comp": [2, {
      "order": [
        "displayName",
        "propTypes",
        "contextTypes",
        "childContextTypes",
        "mixins",
        "statics",
        "defaultProps",
        "constructor",
        "getDefaultProps",
        "getInitialState",
        "getChildContext",
        "componentWillMount",
        "componentDidMount",
        "componentWillReceiveProps",
        "shouldComponentUpdate",
        "componentWillUpdate",
        "componentDidUpdate",
        "componentWillUnmount",
        "render",
        "/^_render.+$/"
      ]
    }]
  }
}
